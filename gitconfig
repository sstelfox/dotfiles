[advice]
  detachedHead = false

[apply]
  whitespace = nowarn

[branch]
  autosetupmerge = true
  autoSetupMerger = always

[color]
  branch      = auto
  interactive = auto
  diff        = auto
  status      = auto
  ui          = auto

#[commit]
#  gpgsign = true

[core]
  autocrlf = input
  safecrlf = false
  editor   = vim
  filemode = true

[diff]
	algorithm = histogram

[fetch]
  fsckobjects = true
  prune = true

[gpg]
  program = gpg2

[init]
  defaultBranch = main

[pull]
  default = current
  rebase = true

[push]
  default = current
  autoSetupRemote = true

[receive]
  fsckobjects = true

[transfer]
  fsckobjects = true

[user]
  useConfigOnly = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

